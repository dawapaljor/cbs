---

import SectionHeading from "../Section-Heading.astro";
const featuredImage = 'https://media3.giphy.com/media/v1.Y2lkPTc5MGI3NjExcGhwdm9mc25jOXg4djhjc25tMTZra2ljb255dDlxYjJ4azNudG81cyZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/VWeYmlmIFJx3FbMjTv/giphy.gif'
const title = "Boarding Preschools"
const slug = "boarding-preschools"
const videoUrls = [
  {
    title: "Lhadon Medrogongkar, Thanggya Central Bilingual Preschool",
    url: "https://tai-web-video.s3.us-east-1.amazonaws.com/preschool-boarding/Lhadon+Medrogongkar%2C+Thanggya+Central+Bilingual+Preschool.mp4",
    image: "media/1.png",
    id: "video1"
  },
  {
    title: "Mucun Village Kindergarten (not boarding)",
    url: "https://tai-web-video.s3.us-east-1.amazonaws.com/preschool-boarding/Mucun+Village+Kindergarten+(not+boarding_).mp4",
    image: "media/2.png",
    id: "video2"
  },
  {
    title: "Pre-boarding school Medrogongkar (short)",
    url: "https://tai-web-video.s3.us-east-1.amazonaws.com/preschool-boarding/Pre-boarding+school+Medrogongkar+(short).mp4",
    image: "media/3.png",
    id: "video3"
  },
  {
    title: "Tashi Herdsman explaining Primary, middle boarding schools",
    url: "https://tai-web-video.s3.us-east-1.amazonaws.com/preschool-boarding/Tashi+Herdsman+explaining+Primary%2C+middle+boarding+schools+(1).mp4",
    image: "media/4.png",
    id: "video4"
  },
  {
    title: "Village Kindergarten (not boarding)",
    url: "https://tai-web-video.s3.us-east-1.amazonaws.com/preschool-boarding/Village+Kindergarten+(not+boarding+_).mp4",
    image: "media/5.png",
    id: "video5"
  },
  {
    title: "Preschool Kids Folding Blankets",
    url: "https://tai-web-video.s3.us-east-1.amazonaws.com/preschool-boarding/preschool-kids-folding-blankets.mp4",
    image: "media/6.png",
    id: "video5"
  },
  
];

---

<div class="w-screen mx-auto ">
 <div class="flex box flex-col items-center">

  <SectionHeading {title} {featuredImage}></SectionHeading>
    <section class=" font-secondary max-w-7xl p-10 text-gray-600 text-lg content ">  
        
    </section>
    <section class="font-secondary max-w-7xl">
      <div 
        x-data="{ open: false, currentVideo: null }" 
        class="text-gray-600 text-lg content grid grid-col-1 md:grid-cols-3 gap-10 w-full cursor-pointer pb-10"
      >
        {videoUrls.map(video => (
          <div 
            x-data={`{ video: ${JSON.stringify(video)} }`}
            class="rounded shadow hover:shadow-lg transition" 
            @click="open = true; currentVideo = video"
          >
            <div class="group bg-cover bg-center bg-no-repeat  h-96 w-90 relative flex items-center justify-center overflow-hidden"
               style={`background-image:url(${video.image});`}>
            <div class="w-full h-full absolute bg-neutral-950/50 z-0 group-hover:bg-neutral-950/80  transition-all duration-300"></div>
            <img src="media/film.svg" alt="" class="w-30 z-10 group-hover:opacity-30 group-hover:scale-110 transition-all duration-300 " />
          </div>
          </div>
        ))}

        <!-- Modal -->
        <div 
          x-show="open" 
          x-transition 
          class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50"
          style="display: none;"
        >
          <div class="bg-neutral-800/0 rounded-lg overflow-hidden shadow-lg max-w-4xl w-full ">
            <button 
              class="absolute top-2 right-2 text-7xl font-bold text-white hover:text-neutral-100"
              @click="open = false; currentVideo = null"
            >&times;</button>
            <template x-if="currentVideo">
              
                <div class="w-full p-4 bg-neutral-800/0 flex-col items-center">
                  <h2 class="text-xl  mb-4 text-neutral-300" x-text="currentVideo.title"></h2>
                  <center>
                    <video 
                    x-bind:src="currentVideo.url" 
                    controls 
                    autoplay 
                    class="w-full rounded m-5"
                  ></video>
                  </center>
                </div>
              
            </template>
          </div>
        </div>
      </div>
    </section>

</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>




          