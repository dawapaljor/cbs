<script>
    import { gsap } from 'gsap';
    // Create a GSAP timeline
    const tl = gsap.timeline({ defaults: { ease: "power2.out" } });

    // Animate triangles sliding in from top
    tl.fromTo("#triangle, #triangle-orange",
        { y: -1000, opacity: 0 },
        { y: 0, opacity: 1, duration: 1 }
    )
    // Animate the title and subtitle
    .fromTo("#banner-title", 
        { y: -100, opacity: 0 },
        { y: 0, opacity: 1, duration: 1 },
        "<"
    )
    .fromTo("#banner-subtitle",
        { y: 50, opacity: 0 },
        { y: 0, opacity: 1, duration: 1 },
        "-=0.5"
    )
    .fromTo("#banner-by",
        { y: -50, opacity: 0 },
        
        { y: 0, opacity: 1, duration: 0.8 },
        "-=0.3"
    )
    .fromTo("#banner-logo",
        { y: -50, opacity: 0 },
        { y: 0, opacity: 1, duration: 0.8 },
        "-=0.3"
    );

    // Animate gallery images with staggered effect
    const galleryImages = [
        { id: "gallery-img-1", x: -200, y: -100 },
        { id: "gallery-img-2", x: 200, y: 100 },
        { id: "gallery-img-3", x: -150, y: 50 },
        { id: "gallery-img-4", x: 150, y: -50 },
        { id: "gallery-img-5", x: -100, y: 100 }
    ];

    galleryImages.forEach((img, index) => {
        tl.fromTo(`#${img.id}`,
            { x: img.x, y: img.y, opacity: 0, rotation: img.x > 0 ? 20 : -20 },
            { x: 0, y: 0, opacity: 1, rotation: 0, duration: 1 },
            `-=${0.4 - (index * 0.05)}`
        );
    });
</script>