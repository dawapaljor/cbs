---
const {src} = Astro.props;
---
<script type="module" src="https://cdn.jsdelivr.net/npm/player.style/tailwind-audio/+esm"></script>

<div class="w-full flex items-center justify-center py-5">
  <div class="flex-col   border-2  border-neutral-300 w-1/2 self-center">
    <div class="text-neutral-600 bg-neutral-200 text-lg ">
      <p class=""><slot/></p>
    </div>
      <media-theme-tailwind-audio 
        style="--media-primary-color: #ffa200; --media-secondary-color: #cccccc;"
      style="width:100%">
        <video
          slot="media"
          {src}
          playsinline
          crossorigin="anonymous"
        ></video>
      </media-theme-tailwind-audio>
  </div>
</div>

<script type="module" src="https://cdn.jsdelivr.net/npm/videojs-video-element/+esm"></script>
<script type="module" src="https://cdn.jsdelivr.net/npm/player.style/tailwind-audio/+esm"></script>


