<div class="max-w-screen mx-auto flex bg-[url('banner.jpg')] bg-cover bg-center">
    <div class="w-full flex-col bg-neutral-900/70 items-center justify-center pb-50 px-5 pt-50">
        
        
        <!-- Book Stack Container -->
        <div class="w-full flex justify-center items-center relative h-96 ">
            <div class="book-stack relative">
                <!-- Book 1 - Tibetan -->
                <div class="group book-item book-1 absolute transform transition-all duration-700 ease-out cursor-pointer hover:scale-105 flex justify-center items-center">
                    <a href="#" class="flex">
                        <img src="cbs-hindi.jpg" alt="cbs-tibetan" class="w-80 h-auto shadow-2xl rounded-lg backdrop-blur-none">    
                    </a>
                    <h2 class="text-white text-center text-xl absolute px-6 py-3 opacity-0 bg-black group-hover:opacity-100 transition-opacity duration-300 ">Hindi</h2>
                </div>
                
                <!-- Book 2 - English -->
                <div class="group book-item book-2 absolute transform transition-all duration-700 ease-out cursor-pointer hover:scale-105 flex justify-center items-center">
                    <a href="#">
                        <img src="cbs-tibetan.jpg" alt="cbs-english" class="w-80 h-auto shadow-2xl rounded-lg">
                    </a>
                    <h2 class="text-white text-center text-xl absolute px-6 py-3 opacity-0 bg-black group-hover:opacity-100 transition-opacity duration-300 ">Tibetan</h2>
                </div>
                
                <!-- Book 3 - English -->
                <div class="group book-item book-3 absolute transform transition-all duration-700 ease-out cursor-pointer hover:scale-105 flex justify-center items-center">
                    <a href="https://s7712.pcdn.co/wp-content/uploads/2025/05/WhenTheyCametoTakeOurChildren.pdf">
                        <img src="cbs-english.png" alt="cbs-english" class="w-80 h-auto shadow-2xl rounded-lg">
